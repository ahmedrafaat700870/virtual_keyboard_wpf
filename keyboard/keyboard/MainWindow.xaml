<Window x:Class="keyboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:keyboard"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" x:Name="text"/>
        <Button Focusable="False" Grid.Row="1" x:Name="enter" Click="enter_Click" Width="150" Height="100">enter</Button>
        <Button Grid.Row="2" x:Name="a" Click="a_Click" Width="150" Height="100">a</Button>
        <Button Grid.Row="3" x:Name="b" Click="b_Click" Width="150" Height="100"> b </Button>
    </Grid>
</Window>
