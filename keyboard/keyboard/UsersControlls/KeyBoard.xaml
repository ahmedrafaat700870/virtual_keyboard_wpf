<UserControl x:Class="keyboard.UsersControlls.KeyBoard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:keyboard.UsersControlls"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="894">
    <UserControl.Resources>
        <Style TargetType="Grid" x:Key="mainGrid">
            <Setter Property="Background" Value="Transparent" />
        </Style>
    </UserControl.Resources>
    <Grid Style="{StaticResource mainGrid}">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <UniformGrid Rows="1" Columns="17" Grid.Row="0" x:Name="grid_0"></UniformGrid> 

        <UniformGrid Grid.Row="1" x:Name="grid_1"></UniformGrid>

        <UniformGrid Grid.Row="2" x:Name="grid_2"></UniformGrid>

        <UniformGrid Grid.Row="3" x:Name="grid_3"></UniformGrid>
        
    </Grid>
</UserControl>
